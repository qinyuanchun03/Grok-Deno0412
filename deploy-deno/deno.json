{
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "dom.iterable", "esnext"],
    "strict": true,
    "target": "esnext"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "tasks": {
    "start": "deno run --allow-net ../src/deno_entry.ts",
    "deploy": "deployctl deploy --project=xai-api-proxy --prod ../src/deno_entry.ts"
  },
  "importMap": "../import_map.json"
}
